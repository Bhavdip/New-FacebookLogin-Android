<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/theme_window_background</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.Button" parent="android:Widget.Button">
        <item name="android:background">@null</item>
    </style>

    <style name="style_fb_login">
        <item name="android:textColor">@color/color_white_solid</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="style_fb_share">
        <item name="android:background">@drawable/share_post_button</item>
        <item name="android:textColor">@color/color_white_solid</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
